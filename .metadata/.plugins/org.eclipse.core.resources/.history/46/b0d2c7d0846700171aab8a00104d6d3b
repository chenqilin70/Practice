package com.oracle.struts.util;

import java.sql.Date;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.ArrayList;
import java.util.List;
import java.util.Random;

import com.mysql.shopping.model.dao.OrderDAO;
import com.mysql.shopping.model.dao.OrderDAOimp;

public class DataUtil {
	private static OrderDAO dao=new OrderDAOimp();
	public static void main(String[] args) throws ParseException {
//		dao.addStatisticalData();
		String year="2017";
		String[] months=new String[]{"1","2","3","3","4","4","5","5","5","6","6","6","7","7","7","8","8","8","9","9","9","10","10","10","11","11","11","11","12","12","12","12"};
		List hours=new ArrayList<>();
		for(int i=0;i<24;i++){
			int realHour=i+1;
			if(realHour<5){
				hours.add(realHour);
			}else if(realHour>=5 && realHour<12){
				hours.add(realHour);
				hours.add(realHour);
			}else if(realHour>=12 && realHour<15){
				hours.add(realHour);
				hours.add(realHour);
				hours.add(realHour);
			}else if(realHour>=15 && realHour<17){
				hours.add(realHour);
				hours.add(realHour);
			}else if(realHour>=17 && realHour<24){
				hours.add(realHour);
				hours.add(realHour);
				hours.add(realHour);
				hours.add(realHour);
			}else if(realHour==24){
				hours.add(realHour);
			}
		}
		Random ran=new Random();
		int MM=ran.nextInt(months.length);
		int dd=ran.nextInt(29)+1;
		int HH=ran.nextInt(hours.size());
		int mm=ran.nextInt(60);
		int ss=ran.nextInt(60);
		System.out.println(year+"-"+MM+"-"+dd+" "+HH+":"+mm+":"+ss);
		
		
	}
	
	
	
	

}
