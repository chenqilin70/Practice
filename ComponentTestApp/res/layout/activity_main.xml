<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_test_simple"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="测试简单component" />

        <Button
            android:id="@+id/btn_test_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="测试菜单component" />

        <Button
            android:id="@+id/btn_test_progress_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="测试进度条component" />

        <Button
            android:id="@+id/btn_test_dialog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="测试对话框component" />

    </LinearLayout>

</RelativeLayout>
